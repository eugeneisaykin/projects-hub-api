{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"@root/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
